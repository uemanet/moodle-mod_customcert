{{!
    @template mod_customcert/verify_certificate_results

    The certificate verification results page

    Classes required for JS:
    * None

    Data attibutes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * None

    Example context (json):
    {
    }
}}
{{#success}}
    <div class="alert alert-success" role="alert">
        <h4 class="alert-heading">Esse certificado é válido!</h4>
        <hr>
        <p class="mb-0">Abaixo estão os detalhes do certificado gerado.</p>
    </div>

    {{#issues}}
        {{> mod_customcert/verify_certificate_result }}
    {{/issues}}
{{/success}}
{{^success}}
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Certificado inválido!</h4>
        <hr>
        <p class="mb-0">Não encontramos um certificado para este código de verificação. Verifique se digitou o código corretamente.</p>
    </div>
{{/success}}
